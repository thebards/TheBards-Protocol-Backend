{
    "name": "server",
    "version": "1.0.0",
    "description": "server of the bards backend.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "clean": "rm -rf ./dist tsconfig.tsbuildinfo",
        "generate": "graphql-codegen --config codegen.yml",
        "compile": "tsc",
        "build": "yarn clean; npm run compile",
        "postinstall": "npm run compile",
        "test": "jest --no-watchman",
        "start": "npm run compile && env-cmd -f .env node -r module-alias/register ./dist/index.js",
        "restart": "yarn build; yarn start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thebards/server.git"
    },
    "keywords": [],
    "authors": [
        "yingyuankai@aliyun.com"
    ],
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/thebards/server/issues"
    },
    "homepage": "https://github.com/thebards/server#readme",
    "dependencies": {
        "@apollo/server": "^4.0.0-rc.17",
        "@apollo/utils.keyvadapter": "^1.1.2",
        "@keyv/redis": "^2.5.1",
        "@prisma/client": "^4.5.0",
        "@types/jest": "^29.0.2",
        "graphql": "^16.6.0",
        "jest": "^29.0.3",
        "keyv": "^4.5.0",
        "module-alias": "^2.2.2",
        "omit-deep": "^0.3.0",
        "pg-promise": "^10.12.0",
        "ts-jest": "^29.0.1"
    },
    "devDependencies": {
        "@types/node": "^18.11.2",
        "env-cmd": "^10.1.0",
        "prisma": "^4.5.0",
        "typescript": "^4.8.4"
    }
}